<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".ChooseLayoutActivity">


    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/editImage1"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_plus"/>

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/editImage2"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="235dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editImage1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_plus"/>

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/editImage3"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editImage1"
        app:layout_constraintTop_toBottomOf="@id/editImage2"
        android:background="@drawable/ic_plus"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Извините, но на данный момент это единственно доступная разметка"
        android:textSize="25sp"
        android:fontFamily="@font/futurespore"
        android:textColor="@color/textAll"
        app:layout_constraintBottom_toTopOf="@+id/editImage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>